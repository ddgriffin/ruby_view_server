<html>

<%
  def link_to(name, url)
    return "<a href='#{url}'>#{name}</a>"
  end
%>

  <body>
    <h1>You're using a layout</h1>

    <% if @request.query['first_name'] && !@request.query['first_name'].empty? %>
    Hello there <%= @request.query['first_name'] %>. I'm glad you're feeling <%=@request.query['feeling'] %>.
    <% else %>
    Enter your name
    <% end %>

    <form method='post' action="<%= @request.path %>">
      First name: <input type="text" name="first_name" placeholder='first name'/>
      <br />
      How are you? <input type="radio" name="feeling" value="ok" /> OK
      <input type="radio" name="feeling" value="alright" /> Alright<br />
      <input type="submit" value="submit" />
    </form>

    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <%= link_to('Me', 'me.html') %>
      <%= link_to('Google', 'http://google.com') %>
    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>